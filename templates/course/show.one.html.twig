{% extends 'base.html.twig' %}
{% set title_lesson = course.slug %}

{% block title %}ECO IT | {{ title_lesson }}{% endblock %}

{% block body %}
<div class="container-fluid g-0 course__one__container">
    <section class="container mb-4">
        <div class="row px-5">
            <div class="col-12">
                <h1 class="d-flex justify-content-center align-items-center fw-bold h2 mb-4 course__one__container__title">
                    <span class="badge bg-danger me-4">Cours</span>
                    {{ course.title }}
                </h1>
            </div>
            <div class="col-12 course__one__container__description">
                <h4 class="text-center">Voici ce que nous allons apprendre dans ce cours :</h4>
                <p class="text-center">
                    {{ course.description }}
                </p>
            </div>
        </div>
    </section>
    <hr>
    <div class="row px-5 my-5">
        <div class="col-12 text-center">
            <img src="{{ course.image|getPathImage }}" alt="img-fluid" width="200">
        </div>
    </div>
    <section class="container">
        <div class="row px-5">
            <div class="col-12">
                {% if sections %}
                    {% for section in sections %}
                        <h2 class="d-flex justify-content-center align-items-center my-5 course__one__container__title">
                            <span class="badge bg-secondary me-4">Section</span>
                            {{ section.title }}
                        </h2>
                        {% if lessons %}
                            {% for lesson in lessons %}
                                {% for lessonValues in lesson %}
                                    {% if lessonValues.section.id == section.id %}
                                        <div class="row px-5 my-5">
                                            <div class="col-12">
                                                <h3 class="d-flex align-items-center course__one__container__title">
                                                    <span class="badge bg-warning me-4">Lesson</span>
                                                    {{ lessonValues.title }}
                                                </h3>
                                            </div>
                                        </div>
                                        <div class="row px-5 my-5">
                                            <div class="col-12 col-lg-6">
                                                <h5>Descriptif de la lesson :</h5>
                                                <p>
                                                    {{ lessonValues.explanation }}
                                                </p>
                                            </div>
                                            <div class="col-12 col-lg-6">
                                                <h5>Vidéo tutoriel :</h5>
                                                <iframe 
                                                    width="560" 
                                                    height="315" 
                                                    src="{{ lessonValues.video }}" 
                                                    title="YouTube video player" 
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                                    allowfullscreen
                                                >
                                                </iframe>
                                            </div>
                                        </div>
                                        <div class="row px-5 my-5">
                                            <div class="col-12">
                                                <h5>Documents disponibles au téléchargement</h5>
                                            </div>
                                            <div class="col-12 col-lg-6">
                                                <h6>Documents PDF :</h6>
                                                <ul class="list-group">
                                                    {% for document in lessonValues.documentsLesson %}
                                                        {% if lessonValues.id == document.lesson.id %}
                                                            <li class="list-group-item">
                                                                <a href="{{ document.file|getPathDocument }}" download>
                                                                    {{ document.name }}
                                                                </a>
                                                            </li>
                                                        {% endif %}
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                            <div class="col-12 col-lg-6">
                                                <h6>Images de la lesson :</h6>
                                                <ul class="list-group">
                                                    {% for image in lessonValues.imagesLesson %}
                                                        {% if lessonValues.id == image.lesson.id %}
                                                            <li class="list-group-item">
                                                                <a href="{{ image.file|getPathImage }}" download>
                                                                    {{ image.name }}
                                                                </a>
                                                            </li>
                                                        {% endif %}
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        {% endif %}
                        <hr>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>
</div>
{% endblock %}
